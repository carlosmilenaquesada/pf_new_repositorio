<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.activities.ServerSelectionActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Introduce IP del servidor" />

    <EditText
        android:id="@+id/etServerDirection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="p.e. 192.168.0.1"
        android:inputType="text"
        android:minHeight="48dp"
        android:text="192.168.0.4" />

    <Button
        android:id="@+id/btConfirmServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Conectar" />

</LinearLayout>