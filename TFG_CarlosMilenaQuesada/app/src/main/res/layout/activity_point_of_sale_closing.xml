<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EDF2FB"
    android:orientation="vertical"
    tools:context=".views.activities.point_of_sale.PointOfSaleClosingActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_shadow_start_color"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCountedTicketsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/design_default_color_secondary_variant"
                    android:gravity="center"
                    android:text="Tickets"
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCountedTicketsFromTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/design_default_color_secondary"
                        android:gravity="center"
                        android:text="Desde" />

                    <TextView
                        android:id="@+id/tvCountedTicketFrom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:hint="Desde" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCountedTicketToTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/design_default_color_secondary"
                        android:gravity="center"
                        android:text="Hasta" />

                    <TextView
                        android:id="@+id/tvCountedTicketTo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:hint="Hasta" />
                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_shadow_start_color"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCountedDateTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/design_default_color_secondary_variant"
                    android:gravity="center"
                    android:text="Fechas"
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCountedTicketsDateTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/design_default_color_secondary"
                        android:gravity="center"
                        android:text="Desde" />

                    <TextView
                        android:id="@+id/tvCountedDateFrom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:hint="Desde" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCountedDateToTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/design_default_color_secondary"
                        android:gravity="center"
                        android:text="Hasta" />

                    <TextView
                        android:id="@+id/tvCountedDateTo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:hint="Hasta" />
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_shadow_start_color"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTotalSaleTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/design_default_color_secondary_variant"
                    android:gravity="center"
                    android:text="Venta total"
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvTotalSaleBaseTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/design_default_color_secondary"
                            android:gravity="center"
                            android:text="B. imponible" />

                        <TextView
                            android:id="@+id/tvTotalSaleBase"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:hint="B. imponible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvTotalVatTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/design_default_color_secondary"
                            android:gravity="center"
                            android:text="Total IVA" />

                        <TextView
                            android:id="@+id/tvTotalVat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:hint="Total Iva" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvTotalSaleAmountTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/design_default_color_secondary"
                            android:gravity="center"
                            android:text="Venta total" />

                        <TextView
                            android:id="@+id/tvTotalSaleAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:hint="Venta total" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_shadow_start_color"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCapitalOperationsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/design_default_color_secondary_variant"
                    android:gravity="center"
                    android:text="Operaciones con capital"
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCashInDeskTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/design_default_color_secondary"
                            android:gravity="center"
                            android:text="En caja" />

                        <TextView
                            android:id="@+id/tvCashInDesk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:hint="En caja" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvOperationsTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/design_default_color_secondary"
                            android:gravity="center"
                            android:text="Tramitado" />

                        <TextView
                            android:id="@+id/tvOperations"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:hint="Tramitado" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCapitalDiffenceTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/design_default_color_secondary"
                            android:gravity="center"
                            android:text="Diferencia" />

                        <TextView
                            android:id="@+id/tvCapitalDiffence"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:hint="Diferencia" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_shadow_start_color"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSaleByPaymentMethodTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/design_default_color_secondary_variant"
                    android:gravity="center"
                    android:text="Venta por forma de pago"
                    android:textColor="#000000" />

                <TableLayout
                    android:id="@+id/tlSalesByPaymentMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvPaymentMethodTypeTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/design_default_color_secondary"
                            android:gravity="center"
                            android:text="Forma pago" />

                        <TextView
                            android:id="@+id/tvSaleBaseByPaymentMethodTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/design_default_color_secondary"
                            android:gravity="center"
                            android:text="B. imponible" />

                        <TextView
                            android:id="@+id/tvVatAmountByPaymentMethodTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/design_default_color_secondary"
                            android:gravity="center"
                            android:text="Total IVA" />

                        <TextView
                            android:id="@+id/tvTotalSaleByPaymentMethodTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/design_default_color_secondary"
                            android:gravity="center"
                            android:text="Venta total" />

                    </TableRow>

                </TableLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_shadow_start_color"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSaleRatioByFamilyTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/design_default_color_secondary_variant"
                    android:gravity="center"
                    android:text="Participación por familia"
                    android:textColor="#000000" />

                <TableLayout
                    android:id="@+id/tlSalesRatioByFamily"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvFamilyNameTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/design_default_color_secondary"
                            android:gravity="center"
                            android:text="Familia" />

                        <TextView
                            android:id="@+id/tvUnitsSoldByFamily"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/design_default_color_secondary"
                            android:gravity="center"
                            android:text="Unidades" />


                        <TextView
                            android:id="@+id/tvSaleBaseByFamilyTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/design_default_color_secondary"
                            android:gravity="center"
                            android:text="B. imponible" />

                        <TextView
                            android:id="@+id/tvPercentRatioByFamiyTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/design_default_color_secondary"
                            android:gravity="center"
                            android:text="Ratio %" />

                    </TableRow>

                </TableLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_shadow_start_color"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSaleByVatTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/design_default_color_secondary_variant"
                    android:gravity="center"
                    android:text="Venta por tipo de IVA"
                    android:textColor="#000000" />

                <TableLayout
                    android:id="@+id/tlSalesByVat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvVatDescriptionTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/design_default_color_secondary"
                            android:gravity="center"
                            android:text="Tipo" />

                        <TextView
                            android:id="@+id/tvVatPercentTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/design_default_color_secondary"
                            android:gravity="center"
                            android:text="%" />

                        <TextView
                            android:id="@+id/tvSaleBaseByVatTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/design_default_color_secondary"
                            android:gravity="center"
                            android:text="B. imponible" />

                        <TextView
                            android:id="@+id/tvVatAmountByVatTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/design_default_color_secondary"
                            android:gravity="center"
                            android:text="Total IVA" />

                        <TextView
                            android:id="@+id/tvTotalSaleByVatTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/design_default_color_secondary"
                            android:gravity="center"
                            android:text="Venta total" />

                    </TableRow>

                </TableLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>