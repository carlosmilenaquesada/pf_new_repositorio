<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".views.activities.CapitalOperationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvOperationTypeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Operaci贸n"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvOperationType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvOperationAmountTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Importe"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etndOperationAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ems="10"
            android:hint="Introduce el importe"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textColorHint="#546E7A" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDescriptionTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Descripci贸n"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ems="10"
            android:hint="Introduce una descripci贸n"
            android:inputType="text"
            android:minHeight="48dp"
            android:singleLine="false"
            android:textColorHint="#546E7A" />
    </LinearLayout>

    <Button
        android:id="@+id/btApply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Aplicar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCapitalOperationDescriptionTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#00BCD4"
            android:gravity="center"
            android:hint="Descripci贸n"
            android:textColor="#000000"
            android:textColorHint="#263238"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDepositAmountTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_bright"
            android:ems="10"
            android:gravity="center"
            android:hint="Ingresos"
            android:inputType="numberSigned"
            android:textColor="#000000"
            android:textColorHint="#01579B"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvWithdrawalAmountTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FF8787"
            android:ems="10"
            android:gravity="center"
            android:hint="Retiradas"
            android:inputType="numberSigned"
            android:textColorHint="#4E342E"
            android:textSize="16sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCapitalOperations"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>