<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:backgroundTintMode="add"
    android:orientation="vertical"
    app:layout_constraintCircleRadius="5dp"
    tools:context=".views.activities.SaleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTicketIdInSaleTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Id del ticket" />

        <TextView
            android:id="@+id/tvTicketIdInSale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Id del ticket" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/swGenerateInvoice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Generar factura" />

        <AutoCompleteTextView
            android:id="@+id/actvCustomerId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Introduce NIF/CIF del cliente"
            android:minHeight="48dp"
            android:textColorHint="#546E7A" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etndArticleQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints=""
            android:hint="Introducir cantidad"
            android:inputType="number|numberDecimal|numberSigned"
            android:minHeight="48dp"
            android:text="3"
            android:textColorHint="#546E7A" />

        <EditText
            android:id="@+id/etArticleCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints=""
            android:hint="Introducir cÃ³digo"
            android:inputType="text"
            android:minHeight="48dp"
            android:text="COD000001"
            android:textColorHint="#546E7A" />

        <Button
            android:id="@+id/btPutArticle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insertar" />


    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btOpenScanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scanner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvArticlesOnTicket"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTitleTicketTotalAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvTicketTotalAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btPayTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pagar" />

    <Button
        android:id="@+id/btReserveTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reservar" />


</LinearLayout>