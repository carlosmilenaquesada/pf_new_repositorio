<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDF2FB"
    android:orientation="vertical"
    tools:context=".views.activities.point_of_sale.MoneyCountingActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            tools:srcCompat="@drawable/billete500e" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="X"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextNumberDecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Indique las unidades"
            android:inputType="numberDecimal"
            android:text="0"
            android:textAlignment="textEnd" />
    </LinearLayout>

    <Button
        android:id="@+id/btPointOfSaleClosing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Declarar" />

</LinearLayout>