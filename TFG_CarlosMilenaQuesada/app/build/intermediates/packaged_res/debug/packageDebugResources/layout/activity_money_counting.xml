                        android:text="-"
                        app:cornerRadius="3dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <!-- 1 C -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- 1 C -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#03A9F4"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/iv1c"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:tag="1"
                    app:srcCompat="@drawable/moneda1c" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/bt1cIncrease"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="increaseUnit"
                        android:padding="0dp"
                        android:text="+"
                        app:cornerRadius="3dp" />

                    <EditText
                        android:id="@+id/et1cQuantity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="3"
                        android:hint="Unidades"
                        android:inputType="number"
                        android:minHeight="48dp"
                        android:tag="quantity_tv"
                        android:textAlignment="textEnd" />

                    <Button
                        android:id="@+id/bt1cReduce"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="decreaseUnit"
                        android:padding="0dp"
                        android:text="-"
                        app:cornerRadius="3dp" />
                </LinearLayout>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#4CAF50"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tvTotalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total contabilizado"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/etTotal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <EditText
                    android:id="@+id/etTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:hint="Total"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:textAlignment="textEnd"
                    app:layout_constraintBottom_toTopOf="@id/btRecalculate"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTotalTitle"
                    app:layout_constraintVertical_bias="0.5" />

                <Button
                    android:id="@+id/btRecalculate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recalcular"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etTotal"
                    app:layout_constraintVertical_bias="1.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>


        <!--    OTROS ELEMENTOS    ##################################################################-->
        <Button
            android:id="@+id/btPointOfSaleClosing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Declarar" />
    </LinearLayout>
</ScrollView>